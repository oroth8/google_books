{
  "name": "google_books",
  "version": "1.0.0",
  "description": "A MERN stack react app that finds books.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently -k \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oroth8/google_books.git"
  },
  "author": "Owen Roth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oroth8/google_books/issues"
  },
  "homepage": "https://github.com/oroth8/google_books#readme",
  "dependencies": {
    "axios": "^0.21.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.11.0"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
